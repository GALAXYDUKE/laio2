<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/left_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/DP_10">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/left_round" />
        </LinearLayout>

        <TextView
            android:id="@+id/month_tv"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5月"
            android:textColor="#666666"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/right_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/DP_10">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/right_round" />
        </LinearLayout>
    </LinearLayout>

    <com.bofsoft.sdk.widget.table.TableLayout
        android:id="@+id/tab_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.bofsoft.sdk.widget.table.TableLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:drawableLeft="@drawable/green_bg"
        android:drawablePadding="@dimen/DP_10"
        android:paddingLeft="@dimen/DP_10"
        android:paddingTop="@dimen/DP_5"
        android:singleLine="true"
        android:text="表示您选中的时间段"
        android:textColor="#666666"
        android:textSize="12sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:drawableLeft="@drawable/blue_bg"
        android:drawablePadding="@dimen/DP_10"
        android:paddingLeft="@dimen/DP_10"
        android:paddingTop="@dimen/DP_5"
        android:singleLine="true"
        android:text="表示多人一车模式,3/4：表示已预约3人/上限4人"
        android:textColor="#666666"
        android:textSize="12sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:drawableLeft="@drawable/orange_bg"
        android:drawablePadding="@dimen/DP_10"
        android:paddingLeft="@dimen/DP_10"
        android:paddingTop="@dimen/DP_5"
        android:singleLine="true"
        android:text="表示一人一车模式,3/5：表示已预约3学时/上限5学时"
        android:textColor="#666666"
        android:textSize="12sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:drawableLeft="@drawable/purple_bg"
        android:drawablePadding="@dimen/DP_10"
        android:paddingBottom="@dimen/DP_5"
        android:paddingLeft="@dimen/DP_10"
        android:paddingTop="@dimen/DP_5"
        android:singleLine="true"
        android:text="表示自营模式,3/6：表示已预约3学时/上限6学时"
        android:textColor="#666666"
        android:textSize="12sp" />

</LinearLayout>