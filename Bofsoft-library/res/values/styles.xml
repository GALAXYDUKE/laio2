<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- PopupWindow 动画 -->
    <style name="popupwindow_move">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>
    <!-- 图片剪切、上传 -->
    <style name="title_1">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="title_1_blue" parent="title_1">
        <item name="android:textColor">@color/RGB_BLUE</item>
    </style>

    <!--     <style name="photo_from_down"> -->
    <!--         <item name="android:windowEnterAnimation">@anim/photo_enter</item> -->
    <!--         <item name="android:windowExitAnimation">@anim/photo_exit</item> -->
    <!--     </style> -->


    <!-- Loding_dialog样式Start -->
    <style name="Dialog_bocop">
        <item name="android:windowBackground">@color/dialog_bg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@+android:style/Animation.Dialog</item>
    </style>

    <!-- 消息数量样式 -->
    <style name="msg_cnt_style">
        <item name="android:background">@drawable/msg_cnt_bg</item>
        <item name="android:paddingLeft">4sp</item>
        <item name="android:paddingRight">4sp</item>
        <item name="android:textColor">@color/RGB_FFF</item>
        <item name="android:textSize">10sp</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
