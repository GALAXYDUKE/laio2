<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item  
        android:state_pressed="true" android:state_focused="true" android:state_enabled="true" >
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/border_corners"/>
            <solid android:color="@color/bg_yellow_verifycode"/>
            <stroke android:width="0.5dp"
                android:color="@color/bg_yellow_verifycode"/>
            </shape>
    </item>
    <item  android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/border_corners"/>
            <solid android:color="@color/bg_yellow_verifycode" />
            <stroke android:width="0.5dp"
                android:color="@color/bg_yellow_verifycode"/>
            </shape>
    </item>
    <item >
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/border_corners"/>
            <solid android:color="@color/bg_yellow_verifycode" />
            <stroke android:width="0.5dp"
                android:color="@color/bg_yellow_verifycode"/>
            </shape>
    </item>

</selector>
