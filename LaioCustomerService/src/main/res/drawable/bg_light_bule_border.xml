<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item  
        android:state_pressed="true" android:state_focused="true" android:state_enabled="true" >
        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <solid android:color="@color/bg_blue"/>
            <stroke android:width="0.5dp"
                android:color="@color/bg_gray"/>
            </shape>
    </item>
    <item  android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <solid android:color="@color/bg_gray_light" />
            <stroke android:width="0.5dp"
                android:color="@color/bg_gray"/>
            </shape>
    </item>
    <item >
        <shape android:shape="rectangle">
           <!--  <corners android:radius="3dp"/> -->
            <solid android:color="@color/bg_blue_light" />
            <stroke android:width="0.5dp"
                android:color="@color/bg_gray"/>
            </shape>
    </item>

</selector>
