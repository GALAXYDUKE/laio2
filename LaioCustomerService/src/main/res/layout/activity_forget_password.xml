<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/appBgColor" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_left_right"
            android:paddingRight="@dimen/margin_left_right" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal" >

                    <com.bofsoft.laio.customerservice.Widget.Widget_Input
                        android:id="@+id/forget_edtPhone"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1.0"
                        app:inPic="@mipmap/button_user_1"
                        app:inputMaxLength="11"
                        app:inputType="textPhone"
                        app:itext="输入手机号码"
                        app:outPic="@mipmap/button_user" />

                    <TextView
                        android:id="@+id/btnGetCode"
                        style="@style/text_button_style1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/app_gap"
                        android:paddingRight="@dimen/app_gap"
                        android:text="获取验证码" />
                </LinearLayout>

                <com.bofsoft.laio.customerservice.Widget.Widget_Input
                    android:id="@+id/forget_edtAuthCode"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    app:inPic="@mipmap/button_danwei_1"
                    app:inputMaxLength="6"
                    app:inputType="number"
                    app:itext="输入验证码"
                    app:outPic="@mipmap/button_danwei" >
                </com.bofsoft.laio.customerservice.Widget.Widget_Input>
            </LinearLayout>

            <com.bofsoft.laio.customerservice.Widget.Widget_Image_Text_Btn
                android:id="@+id/forget_btnAuth"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                app:background="@mipmap/button_send"
                app:text="验    证"
                app:textColor="@color/text_white"
                app:textSize="16" >
            </com.bofsoft.laio.customerservice.Widget.Widget_Image_Text_Btn>
        </LinearLayout>
    </ScrollView>

</LinearLayout>