<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollview_train"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/layout_train_pro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    style="@style/padding_top_bottom10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_right5"
                    android:layout_marginRight="@dimen/margin_left_right5"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/img_coach_head"
                        android:layout_width="120dp"
                        android:layout_height="90dp"
                        android:src="@mipmap/icon_default_small" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/margin_left_right10"
                        android:paddingRight="@dimen/margin_left_right10" >

                        <TextView
                            android:id="@+id/tv_train_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥100.00"
                            android:textColor="@color/bg_red"
                            android:textSize="@dimen/text_size_big" />

                        <TextView
                            android:id="@+id/tv_train_choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_top_bottom5"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="已选：“C1 科目二桑塔纳初学培训”"
                            android:textSize="@dimen/text_size_normal" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/txtConfirmTrainTime"
                style="@style/padding_left_right10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:text="请确认您与教练协商后的培训时段"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_gray_light" />

            <LinearLayout
                android:id="@+id/layout_Testsub"
                style="@style/padding_left_right10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_white"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingTop="15dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="培训科目"
                    android:textColor="@color/text_black_light"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/tv_Testsub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/arrow_right"
                    android:gravity="center_vertical"
                    android:hint="请选择培训科目"
                    android:textColor="@color/text_black_light"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_gray_light" />

            <LinearLayout
                android:id="@+id/layout_choice_time1"
                style="@style/padding_left_right10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_white"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingTop="15dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="培训时段"
                    android:textColor="@color/text_black_light"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/tv_time_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/arrow_right"
                    android:gravity="center_vertical"
                    android:hint="请选择预约培训时段"
                    android:textColor="@color/text_black_light"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bg_gray_light" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/layout_choice_time2"
                        style="@style/padding_left_right10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_white"
                        android:orientation="horizontal"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="增值服务"
                            android:textColor="@color/text_black_light"
                            android:textSize="@dimen/text_size_normal" />

                        <TextView
                            android:id="@+id/tv_service_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="5dp"
                            android:drawableRight="@mipmap/arrow_right"
                            android:gravity="center_vertical"
                            android:text="请选择培训时段"
                            android:textColor="@color/text_gray_light"
                            android:textSize="@dimen/text_size_normal" />
                    </LinearLayout>

                    <com.bofsoft.laio.widget.CustomListView
                        android:id="@+id/GridVas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fadingEdge="none"
                        android:scrollbars="none"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bg_gray_light" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/layout_choice_time3"
                        style="@style/padding_left_right10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_white"
                        android:orientation="horizontal"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="接送地址"
                            android:textColor="@color/text_black_light"
                            android:textSize="@dimen/text_size_normal" />

                        <TextView
                            android:id="@+id/tv_address_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="5dp"
                            android:drawableRight="@mipmap/arrow_right"
                            android:gravity="center_vertical"
                            android:text="请选择培训时段"
                            android:textColor="@color/text_gray_light"
                            android:textSize="@dimen/text_size_normal" />
                    </LinearLayout>

                    <com.bofsoft.laio.widget.CustomListView
                        android:id="@+id/list_TransferAddr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fadingEdge="none"
                        android:scrollbars="none"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bg_gray_light" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>