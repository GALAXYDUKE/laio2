            android:text="130******12" />

        <TextView
            android:id="@+id/tv_evaluate_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="@dimen/margin_left_right5"
            android:layout_marginRight="@dimen/margin_left_right5"
            android:text="教练服务态度很好，对学员很有耐心，非常不错！教练服务态度很好，对学员很有耐心，非常不错"
