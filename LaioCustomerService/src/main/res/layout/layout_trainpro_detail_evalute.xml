                android:textColor="@color/text_gray_light"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/tv_jiaoxue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableRight="@mipmap/icon_evaluate"
                android:gravity="center"
                android:text="4.9"
                android:textColor="@color/bg_orange"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/bg_detail_line_light" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_left_right5"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="教学风气"
                android:textColor="@color/text_gray_light"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/tv_kayao"
