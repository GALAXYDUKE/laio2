<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_margin="@dimen/margin_left_right10">
        
        <TextView 
            android:id="@+id/tv_prodata"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="2014-11-16"/>
        
        <TextView 
            android:id="@+id/tv_protimes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可预约2学时"
            android:layout_marginRight="@dimen/margin_left_right5"
            android:drawableRight="@mipmap/arrow_right"
            android:drawablePadding="@dimen/margin_left_right5"/>
        
    </LinearLayout>
</LinearLayout>