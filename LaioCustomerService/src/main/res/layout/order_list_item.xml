<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/group_bg"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/group_bg"
        android:orientation="horizontal"
        android:padding="@dimen/app_gap" >

        <TextView
            android:id="@+id/order_num_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="订单编号 12346789"
            android:textSize="@dimen/ts_desc" />

        <TextView
            android:id="@+id/order_state_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/app_gap"
            android:paddingRight="@dimen/app_gap"
            android:singleLine="true"
            android:text="录入学员"
            android:textColor="@color/Red"
            android:textSize="@dimen/ts_note" />
        
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/app_gap"
        android:layout_marginRight="@dimen/app_gap"
        android:background="@color/line_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/app_gap" >

        <ImageView
            android:id="@+id/head_iv"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/app_gap"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/app_gap"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="周仕洋 报名 C1" />

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="一人一车一费制"
                android:textColor="@color/tc_gray"
                android:textSize="@dimen/ts_desc" />

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="订单时间:2015-5-18 14:25:12"
                android:textColor="@color/tc_gray"
                android:textSize="@dimen/ts_desc" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/app_gap"
        android:layout_marginRight="@dimen/app_gap"
        android:background="@color/line_bg" />

    <LinearLayout
        android:id="@+id/money_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/app_gap"
            android:layout_marginRight="@dimen/app_gap"
            android:background="@color/line_bg" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_bg" />

</LinearLayout>