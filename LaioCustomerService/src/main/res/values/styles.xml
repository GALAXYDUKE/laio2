    <style name="title_text_style">
        <item name="android:textSize">@dimen/ts_main</item>
        <item name="android:padding">@dimen/app_gap</item>
        <item name="android:background">@color/group_bg</item>
    </style>

    <style name="text_button_style1">
        <item name="android:padding">@dimen/app_gap</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/RGB_FFF</item>
        <item name="android:textSize">@dimen/ts_desc</item>
        <item name="android:background">@drawable/selector_orange_border</item>
    </style>

    <style name="customRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/bg_ratingbar</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:maxHeight">15dp</item>
