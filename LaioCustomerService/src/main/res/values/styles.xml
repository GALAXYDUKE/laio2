    <style name="WaitDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="PromoptDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="margin_left_right">
        <item name="android:layout_marginLeft">@dimen/margin_left_right</item>
        <item name="android:layout_marginRight">@dimen/margin_left_right</item>
    </style>

    <style name="margin_left_right5">
        <item name="android:layout_marginLeft">@dimen/margin_left_right5</item>
